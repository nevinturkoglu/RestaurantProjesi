@model IEnumerable<RestaurantProjesi.Models.İletisim>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefon)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Mesaj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tarih)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefon)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mesaj)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tarih)
				</td>
				<td>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
